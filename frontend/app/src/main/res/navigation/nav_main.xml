<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.campuslink_android.ui.home.HomeFragment"
        android:label="홈" />

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.campuslink_android.ui.item.ItemFragment"
        android:label="물품" />

    <!-- 이미 있는: 내가 빌려준 목록(요청 목록) -->
    <fragment
        android:id="@+id/rentalRequestListFragment"
        android:name="com.example.campuslink_android.ui.rental.RentalRequestListFragment"
        android:label="대여 요청 목록">

        <action
            android:id="@+id/action_rentalRequestListFragment_to_rentalFragment"
            app:destination="@id/rentalFragment" />
    </fragment>

    <!-- 내가 빌린 목록 -->
    <fragment
        android:id="@+id/borrowedListFragment"
        android:name="com.example.campuslink_android.ui.rental.BorrowedListFragment"
        android:label="내가 빌린 목록">

        <action
            android:id="@+id/action_borrowedListFragment_to_rentalFragment"
            app:destination="@id/rentalFragment" />
    </fragment>

    <!-- ⭐ 새로 추가: 내가 빌려준 목록 -->
    <fragment
        android:id="@+id/lentListFragment"
        android:name="com.example.campuslink_android.ui.rental.LentListFragment"
        android:label="내가 빌려준 목록">

        <action
            android:id="@+id/action_lentListFragment_to_rentalFragment"
            app:destination="@id/rentalFragment" />
    </fragment>

    <!-- 대여 상세 -->
    <fragment
        android:id="@+id/rentalFragment"
        android:name="com.example.campuslink_android.ui.rental.RentalFragment"
        android:label="대여">

        <argument
            android:name="rentalId"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.campuslink_android.ui.profile.ProfileFragment"
        android:label="프로필" />

    <fragment
        android:id="@+id/myItemListFragment"
        android:name="com.example.campuslink_android.ui.item.MyItemListFragment"
        android:label="내 물품" />

    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.example.campuslink_android.ui.chat.ChatListFragment"
        android:label="채팅" />
    <!-- 설정 -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.campuslink_android.ui.Setting.SettingsFragment"
        android:label="설정" />
    <fragment
        android:id="@+id/pickupListFragment"
        android:name="com.example.campuslink_android.ui.pickup.PickupListFragment"
        android:label="픽업 리스트">
    </fragment>
    <fragment
        android:id="@+id/returnListFragment"
        android:name="com.example.campuslink_android.ui.returnlist.ReturnListFragment"
        android:label="반납하기" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.campuslink_android.ui.notification.NotificationFragment"
        android:label="알림" />
    <action
        android:id="@+id/action_home_to_notifications"
        app:destination="@id/notificationFragment" />



</navigation>
